#!/bin/bash
today=$(date '+%y%m%d')
now=$(date '+%H%M')
if [ $1 = spectrum ]; then
    if [ ! -d /users/VISsvn/TypeApayload/$2/Spectra/Measurement/${today} ]; then
	mkdir /users/VISsvn/TypeApayload/$2/Spectra/Measurement/${today}
    fi
    
    if [ ! -e /users/VISsvn/TypeApayload/$2/Spectra/Measurement/${today}/SPE_$2_DOF_${now}.xml ]; then
	cp /users/VISsvn/TypeApayload/$2/Spectra/Templates/SPE_$2_DOF.xml /users/VISsvn/TypeApayload/$2/Spectra/Measurement/${today}/SPE_$2_DOF_${now}.xml
    fi
    cd /users/VISsvn/TypeApayload/$2/Spectra/Measurement/${today}
    diaggui &
fi

